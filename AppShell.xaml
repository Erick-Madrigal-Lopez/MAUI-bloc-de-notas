    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:bloc_de_notas_app.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
